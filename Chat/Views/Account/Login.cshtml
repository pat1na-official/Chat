<style>
    body {
        background: linear-gradient(180deg, #C0CEFF 0%, #FFFFFF 100%);
    }

    h2 {
        color: black;
        font-family: Impact, fantasy;
        text-align: center;
        top: 50%;
        left: 50%;
    }

    label {
        font-family: Helvetica;
        color: black;
    }

    .button {
        background-color: #686FAE;
        border: none;
        color: white;
        padding: 10px 22px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        position: center;
        margin: 10px 40px;
    }

    form {
        padding: 20px 40px;
        background: #C0CEFF;
        position: fixed;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        border-radius: 7px;
    }
</style>
@model Chat_2._0.ViewModels.LoginModel


<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <h2>Вход на сайт</h2>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
            <a asp-action="Register"  class="btn btn-outline-dark" asp-controller="Account">Регистрация</a>
        </div>
    </div>
</form>
